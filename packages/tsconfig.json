{
  "files": [],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },  
  "references": [
      { "path": "base" },
      { "path": "logger" },
      { "path": "object-schema" },
      { "path": "hashing" },
      { "path": "signing" },
      { "path": "bound-witness" },
      { "path": "zig-zag-bound-witness-builder" },
      { "path": "errors" }
  ],
  "include": [
    "logger/src/**/*.ts",
    "base/src/**/*.ts",
    "object-schema/src/**/*.ts",
    "hashing/src/**/*.ts",
    "signing/src/**/*.ts",
    "bound-witness/src/**/*.ts",
    "zig-zag-bound-witness-builder/src/**/*.ts",
    "errors/src/**/*.ts"
  ]
}