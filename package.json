{
  "name": "xyo-sdk-core",
  "version": "0.1.0",
  "description": "A core library of nodejs tools to power the nodejs implementation of the XYO network",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "test": "export NODE_ENV=test && jest --no-cache --forceExit --coverage --verbose --detectOpenHandles",
    "build": "yarn install && yarn build-ts && yarn tslint",
    "build-ts": "tsc",
    "dist": "yarn install && tsc -p tsconfig.build.json && yarn tslint",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "install": "yarn build-ts",
    "precommit": "echo \"Build must pass before committing\" && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XYOracleNetwork/sdk-core-nodejs.git"
  },
  "keywords": [
    "xyo",
    "xyo-core",
    "xyo-nodejs"
  ],
  "author": "Ryan Pillsbury",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/XYOracleNetwork/sdk-core-nodejs/issues"
  },
  "homepage": "https://github.com/XYOracleNetwork/sdk-core-nodejs#readme",
  "dependencies": {
    "elliptic": "^6.4.1",
    "node-rsa": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/node-rsa": "^0.4.3",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2"
  }
}
