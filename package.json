{
  "name": "xyo-core",
  "version": "0.2.1",
  "description": "A workspace to aggregated nodejs XYO projects",
  "main": "index.js",
  "author": "XY Development Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -b",
    "test": "yarn build && export NODE_ENV=test && jest --no-cache --forceExit --coverage --verbose false --detectOpenHandles",
    "lint": "tslint -c tslint.json -p packages/tsconfig.json",
    "clean": "node scripts/clean.js",
    "license": "yarn license-checker --onlyAllow 'MIT;BSD-2-Clause;BSD-3-Clause;Apache-2.0;ISC;Unlicense;UNKNOWN;BSD*;CC0-1.0' --excludePackages 'colors@0.6.2'"
  },
  "devDependencies": {
    "@types/node": "11.13.6",
    "@xyo-network/config-tslint": "^0.1.12",
    "enquirer": "^2.3.0",
    "license-checker": "^25.0.1",
    "shelljs": "^0.8.3",
    "tslint": "^5.12.1",
    "ts-jest": "^24.0.0",
    "typescript": "^3.4.4",
    "jest": "^24.7.1",
    "@types/jest": "^24.0.11"
  },
  "dependencies": {
    "@xyo-network/object-model": "^0.5.6",
    "elliptic": "6.4.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/_/",
      "/src/"
    ],
    "testEnvironment": "node"
  }
}
