    "jest": "^24.7.1",
    "license-checker": "^25.0.1",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.0",
    "ts-node": "8.1.0",
    "tslint": "^5.12.1",
    "typescript": "^3.4.4"
  },
  "dependencies": {
    "@xyo-network/object-model": "^0.5.9",
    "elliptic": "6.4.1"
  },
  "files": [
    "dist",
